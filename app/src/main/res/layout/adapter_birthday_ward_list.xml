<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cardadpt"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/layout_margin_8"
    app:cardElevation="@dimen/layout_margin_5"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8.5"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:id="@+id/llt3"
                android:layout_gravity="center"
                android:paddingTop="@dimen/layout_margin_8"
                android:paddingBottom="@dimen/layout_margin_8"
                android:paddingEnd="@dimen/layout_margin_5"
                android:layout_marginLeft="@dimen/layout_margin_8">

                <TextView
                    android:id="@+id/clientname"
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:id="@+id/llt2"
                android:layout_gravity="center"
                android:paddingTop="@dimen/layout_margin_8"
                android:paddingBottom="@dimen/layout_margin_8"
                android:paddingEnd="@dimen/layout_margin_5"
                android:layout_marginLeft="@dimen/layout_margin_8">

                <TextView
                    android:id="@+id/socname"
                    android:layout_width="0dp"
                    android:layout_weight="8.5"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/roomcnt"
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/corporatorwhatsapp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_whatsapp"
                android:backgroundTint="#00000000"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>