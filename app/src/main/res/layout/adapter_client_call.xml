<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cardadpt"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/layout_margin_8"
    app:cardElevation="@dimen/layout_margin_5"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightRed"
        android:orientation="vertical"
        android:id="@+id/llt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:id="@+id/llt2"
            android:paddingEnd="@dimen/layout_margin_5"
            android:layout_marginLeft="@dimen/layout_margin_5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="9"
                android:layout_marginTop="@dimen/layout_margin_2"
                android:layout_marginBottom="@dimen/layout_margin_2"
                android:layout_gravity="center"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/votername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/layout_margin_8"
                    android:text="Adalakha Dinesh Kumar Rampal"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/genage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/layout_margin_8"
                    android:text="9224279397 / BD - 21-09-1989"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/socdet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/layout_margin_8"
                    android:text="Voter ID - 3505"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/responsedet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorLightRed"
                    android:text="Received / Varified"
                    android:layout_marginLeft="@dimen/layout_margin_8"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    >

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/callingbtn"
                        android:layout_margin="@dimen/layout_margin_3"
                        android:backgroundTint="#00000000"
                        app:srcCompat="@drawable/ic_call"/>

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:id="@+id/edit"
                        android:layout_margin="@dimen/layout_margin_3"
                        android:backgroundTint="#00000000"
                        app:srcCompat="@drawable/ic_edit"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:id="@+id/llt3"
                android:visibility="gone"
                android:paddingEnd="@dimen/layout_margin_5"
                android:layout_marginLeft="@dimen/layout_margin_5">
            <TextView
                android:id="@+id/contactp1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:textColor="@color/colorText"
                android:singleLine="true"
                android:layout_marginTop="@dimen/layout_margin_2"
                android:layout_marginBottom="@dimen/layout_margin_2"
                android:layout_marginLeft="12dp"
                android:text="Voter ID - 3523423405"
                android:ellipsize="end"
                android:textSize="15sp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/callingbtn1"
                    android:layout_margin="@dimen/layout_margin_3"
                    android:backgroundTint="#00000000"
                    app:srcCompat="@drawable/ic_call"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:id="@+id/llt4"
                android:visibility="gone"
                android:paddingEnd="@dimen/layout_margin_5"
                android:layout_marginLeft="@dimen/layout_margin_5">
                <TextView
                    android:id="@+id/contactp2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="9"
                    android:textColor="@color/colorText"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/layout_margin_2"
                    android:layout_marginBottom="@dimen/layout_margin_2"
                    android:layout_marginLeft="12dp"
                    android:text="Voter ID - 3523423405"
                    android:ellipsize="end"
                    android:textSize="15sp"/>
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/callingbtn2"
                    android:layout_margin="@dimen/layout_margin_3"
                    android:backgroundTint="#00000000"
                    app:srcCompat="@drawable/ic_call"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>