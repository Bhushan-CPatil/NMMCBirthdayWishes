<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <!-- Layout for Society Master Result -->
    <RelativeLayout
        android:id="@+id/relativeVoterSearchResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_15"
        android:layout_marginRight="@dimen/layout_margin_15"
        android:visibility="visible"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_10"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_5"
                android:layout_marginRight="@dimen/layout_margin_2"
                android:layout_marginTop="@dimen/layout_margin_2"
                android:orientation="horizontal"
                android:weightSum="2">
                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:padding="@dimen/layout_margin_10"
                    android:text=""
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/closeButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/layout_margin_3"
                    android:layout_weight="0.2"
                    android:src="@android:drawable/ic_delete" />
            </LinearLayout>
            <EditText
                android:id="@+id/edtsitesearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ed_border"
                android:drawablePadding="@dimen/layout_margin_10"
                android:hint="DD-MM-YYYY"
                android:inputType="date"
                android:maxLength="10"
                android:imeOptions="actionDone"
                android:padding="@dimen/layout_margin_10"
                android:singleLine="true"
                android:textAppearance="?android:textAppearance"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btnsave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="save"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"/>

           <!-- <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_8" />-->
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>