<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ornettech.qcandbirthdaywishes.activity.CallingQCMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:layout_marginTop="@dimen/_8dp"
        android:weightSum="10.2">

        <!--<LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13sp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_location"
                tools:ignore="VectorDrawableCompat" />

            <Spinner
                android:id="@+id/electionname"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="12dp" />
        </LinearLayout>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13sp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_report"
                tools:ignore="VectorDrawableCompat" />

            <Spinner
                android:id="@+id/spinreptype"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13sp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_call_status"
                tools:ignore="VectorDrawableCompat" />

            <Spinner
                android:id="@+id/spnqcresponse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/layout_margin_8"
        android:weightSum="10.2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13sp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_person"
                tools:ignore="VectorDrawableCompat" />

            <Spinner
                android:id="@+id/executivename"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13sp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_location"
                tools:ignore="VectorDrawableCompat" />

            <Spinner
                android:id="@+id/spnward"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginLeft="12dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/layout_margin_8"
        android:layout_marginRight="@dimen/layout_margin_8"
        android:weightSum="10.2">

        <EditText
            android:id="@+id/callingdate"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/edibg"
            android:drawableLeft="@drawable/ic_calender"
            android:drawablePadding="15dp"
            android:drawableTint="@color/colorPrimary"
            android:hint="Calling Date"
            android:inputType="text"
            android:paddingLeft="14dp"
            android:paddingTop="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorPrimary" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@color/colorPrimary"
            android:text="SEARCH"
            android:id="@+id/submit"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/layout_margin_5"
        android:layout_marginLeft="@dimen/layout_margin_5"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error"
            android:textColor="@color/colorLightRed"
            android:gravity="center"
            android:text="NO RECORD FOUND...."
            android:layout_margin="@dimen/layout_margin_10"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/sms"
            android:textColor="@color/colorBlack"
            android:gravity="left"
            android:scrollbars="vertical"
            android:layout_margin="@dimen/layout_margin_10"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/sendtowhatsapp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin_10"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="SEND TO WHATSAPP"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/sendexceltowhatsapp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/layout_margin_10"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:text="SEND EXCEL"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
