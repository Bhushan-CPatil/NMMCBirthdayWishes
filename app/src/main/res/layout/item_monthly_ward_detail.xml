<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:padding="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:layout_marginBottom="@dimen/layout_margin">
        <RelativeLayout
            android:id="@+id/relativeContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin">

                <LinearLayout
                    android:id="@+id/linearTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/layout_margin"
                    android:paddingRight="@dimen/layout_margin">

                    <TextView
                        android:id="@+id/textViewWardName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:text="Ward Name"
                        android:textStyle="bold"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorText" />

                <!--    <ImageView
                        android:id="@+id/send_whatsapp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_whatsapp" />-->
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearTop"
                    android:paddingLeft="@dimen/layout_margin"
                    android:paddingRight="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin">

                    <TextView
                        android:id="@+id/textViewMessage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="WhatsApp Message"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="@color/colorText" />


                </LinearLayout>

            </RelativeLayout>

            <!--<RelativeLayout
                android:id="@+id/relativeWardWise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeTitle">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewWardWise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_margin"
                    android:scrollbarStyle="insideOverlay"/>


            </RelativeLayout>-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>