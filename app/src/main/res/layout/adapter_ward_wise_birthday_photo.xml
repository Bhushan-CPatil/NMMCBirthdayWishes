<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cardadpt"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/layout_margin_8"
    app:cardElevation="@dimen/layout_margin_5"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorLightRed"
        android:id="@+id/llt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:id="@+id/llt2"
            android:paddingEnd="@dimen/layout_margin_5"
            android:layout_marginLeft="@dimen/layout_margin_5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="10"
                android:layout_marginTop="@dimen/layout_margin_2"
                android:layout_marginBottom="@dimen/layout_margin_2"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:id="@+id/banner"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/layout_margin_8"
                    android:layout_weight="7"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/corporatorname"
                        android:layout_marginTop="@dimen/layout_margin_8"
                        android:layout_marginBottom="@dimen/layout_margin_8"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/corpdesig"
                        android:layout_marginBottom="@dimen/layout_margin_8"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/corpmob"
                        android:layout_marginBottom="@dimen/layout_margin_8"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/corpparty"
                        android:layout_marginBottom="@dimen/layout_margin_8"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>