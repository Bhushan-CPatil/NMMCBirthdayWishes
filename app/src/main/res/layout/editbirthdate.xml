<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/heading"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="Edit Record"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Birth Date :"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="@dimen/layout_margin_8"
                    />
                <EditText
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edibg"
                    android:drawableLeft="@drawable/ic_birthday"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Birth Date"
                    android:inputType="text"
                    android:paddingLeft="14dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="@dimen/layout_margin_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Mobile Number :"
                    android:textColor="@color/colorBlack"
                    android:layout_margin="@dimen/layout_margin_8"
                    />
                <EditText
                    android:id="@+id/mobilenumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edibg"
                    android:drawableLeft="@drawable/ic_call"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/colorPrimary"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="10"
                    android:paddingLeft="14dp"
                    android:paddingTop="12dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="12dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorPrimary"
                    android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Remark :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_edit"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Remark"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="255"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter First Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="First Name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="60"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Middle Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/mname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:singleLine="true"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Middle Name"
                        android:inputType="text"
                        android:maxLength="60"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Last Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:hint="Last Name"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

