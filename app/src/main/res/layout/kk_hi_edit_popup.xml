<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimaryDark">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:id="@+id/heading"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="Edit Record"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter First Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="First Name"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="60"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Middle Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/mname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:singleLine="true"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Middle Name"
                        android:inputType="text"
                        android:maxLength="60"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Last Name :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/lname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                        android:hint="Last Name"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter First Name Marathi:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/fnamemar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="First Name Marathi"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Middle Name Marathi:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/mnamemar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:singleLine="true"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Middle Name Marathi"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Last Name Marathi:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/lnamemar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_person"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Last Name Marathi"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Designation:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:layout_margin="@dimen/layout_margin_10"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="13sp"
                            android:tint="@color/colorPrimary"
                            app:srcCompat="@drawable/ic_designation"
                            tools:ignore="VectorDrawableCompat" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/searchablespinner"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="12dp"
                            android:backgroundTint="@color/colorPrimary" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Gender (M/F):"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_gender"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:digits="FM"
                        android:hint="Enter Gender (M/F)"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Area:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:digits="FM"
                        android:hint="Enter Area"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Area Marathi:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/areamar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:digits="FM"
                        android:hint="Enter Area Marathi"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Birth Date :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/birthdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_birthday"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Birth Date"
                        android:inputType="text"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Anniversary Date :"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/annidate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_birthday"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Anniversary Date"
                        android:inputType="text"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Mobile Number 1:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/mobilenumber1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Mobile Number 1"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:maxLength="10"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Mobile Number 2:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/mobilenumber2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Mobile Number 2"
                        android:inputType="number"
                        android:digits="0123456789"
                        android:maxLength="10"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Remark 1:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/remark1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_edit"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Remark 1"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="255"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Remark 2:"
                        android:textColor="@color/colorBlack"
                        android:layout_margin="@dimen/layout_margin_8"
                        />
                    <EditText
                        android:id="@+id/remark2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/edibg"
                        android:drawableLeft="@drawable/ic_edit"
                        android:drawablePadding="15dp"
                        android:drawableTint="@color/colorPrimary"
                        android:hint="Remark 2"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="255"
                        android:paddingLeft="14dp"
                        android:paddingTop="12dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorPrimary"
                        android:layout_margin="@dimen/layout_margin_10"/>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:gravity="center"
                android:layout_marginBottom="@dimen/layout_margin_5" >
                <Button
                    android:id="@+id/updatebtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/colorPrimary"
                    android:text="UPDATE"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/layout_margin_5"
                    android:layout_marginRight="@dimen/layout_margin_5"
                    />
                <Button
                    android:id="@+id/closebtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@color/colorLightRed"
                    android:text="CLOSE"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/layout_margin_5"
                    android:layout_marginRight="@dimen/layout_margin_5"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>